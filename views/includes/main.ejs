<main role="main" class="container">
    <div class="row justify-content-center">
      <div class="mt-3 w-75">

        <div class="mb-5 text-center">
          <h1>Movie Search Engine</h1>
        </div >

        <div id="search-bar">
          <form id="search-form" methdo="GET" action="/search">
            <div class="form-group row">
              <div class="col">
                <input
                  id="search-input"
                  type="text"
                  class="form-control"
                  name="searchInput"
                  placeholder="Search for a Movie...">
              </div>
              <div class="col-2">
                <button id="search-button" type="submit" class="btn btn-primary">Search</button>
                <div id="loading-icon" class="loader d-none"></div>
              </div>
            </div>
          </form>
        </div>

      </div>
    </div>

    <div id="search-results" class="row justify-content-center">
        <ul class="list-group col-9 mb-4">
          <% if (results) { %>
            <span>
              <%- results[0].image %>
              <h3><%-results[0].name, results[0].date %></h3>
            </span>
            <span>
              <%- results[1].image %>
              <h3><%-results[1].name, results[1].date %></h3>
            </span>
          <% } else { %>

          <% } %>

